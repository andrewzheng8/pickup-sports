<%= form_for(@sport) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.text_field :image, placeholder: "image url", class: "form-control" %>
</div>
  <%= f.submit "Create Sport", class: "btn btn-default" %>
<% end %>
