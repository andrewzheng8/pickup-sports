<h1><%= @sport.name %></h1>
<h6><%= link_to "Edit", edit_sport_path(@sport) %></h6>

<div class="row">
  <div class="col-md-6">
    <img src="<%= @sport.image %>" class="img-responsive">
  </div>
  <div class="col-md-6">
    <h3>Upcomimg Games</h3>
    <table class="table table-striped">
      <% @sport.games.each do |game| %>
        <% if game.end > Time.now %>
        <tr>
          <td><%= link_to "#{game.title}", game_path(game) %></td>
          <td><%= game.pretty_start %></td>
        </tr>
        <% end %>
      <% end %>
    </table>


    <h3>Game History</h3>
    <table class="table table-striped">
      <% @sport.games.each do |game| %>
        <% if game.end < Time.now %>
        <tr>
          <td><%= link_to "#{game.title}", game_path(game) %></td>
          <td><%= game.pretty_end %></td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
