<div class="page-header">
  <h1>Locations</h1>
  <!-- players search -->
  <%= form_tag games_path, method: 'get' do %>
    <div class="form-group">
      <%= text_field_tag :locations, params[:locations], placeholder: "Find locations by title", class: "form-control" %>
    </div>
    <%= submit_tag 'Search', class: 'btn btn-default' %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to new_location_path  do%>
    <button type="button" class="btn btn-default" >
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add location
    </button>
    <% end %>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <% if params[:locations] %>
      <h2>Search Results</h2>
      <% results = @locations.count %>
      <p><%= results %> <%= results == 1 ? "match" : "matches" %> found</p>
    <% else %>
      <h2>Viewing All Locations</h2>
    <% end %>
    <% @locations.each do |location| %>
    <div class="row">
      <div class="col-md-12">
        <%= link_to location.title, location_path(location) %><br>
      </div>
    </div>
    <% end %>
  </div>
</div>
