<div class="page-header">
  <h1>Games</h1>
  <!-- players search -->
  <%= form_tag games_path, method: 'get' do %>
    <div class="form-group">
      <%= text_field_tag :games, params[:games], placeholder: "Find games by title", class: "form-control" %>
    </div>
    <%= submit_tag 'Search', class: 'btn btn-default' %>
  <% end %>
</div>

<% if params[:games] %>
  <h2>Search Results</h2>
  <% results = @games.count %>
  <p><%= results %> <%= results == 1 ? "match" : "matches" %> found</p>
<% else %>
  <h2>Viewing All Games</h2>
<% end %>
<% @games.each do |game| %>
  <%= link_to game.title, game_path(game) %><br>
<% end %>
