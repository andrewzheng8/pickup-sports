<h1>View Game</h1>

<%= @game.title %><br>
<%= @game.description %><br>
<%= @game.start %><br>
<%= @game.end %><br>
<%= @game.sport.name %><br>

<p>Players: </p>
<% if @game.players %>
  <% @game.players.each do |player| %>
    <%= link_to player.email, player_path(player) %><br>
  <% end %>
<% end %>


<% if logged_in? %>
<p><%= link_to "Edit", edit_game_path(@game) %> | <%= link_to "Delete",  game_path(@game), method: :delete %></p>
  <%= form_for(@player_game) do |f| %>
  <%= f.hidden_field :game_id, :value => @game.id %>
  <%= f.submit %>
  <% end %>
<% else %>
<p>Log in to edit or delete</p>
<% end %>


<% if logged_in? %>
  <%= form_for(@post) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_field :content %><br>
    <%= f.hidden_field :player_id, :value => current_player.id %>
    <%= f.hidden_field :game_id, :value => @game.id %>
    <%= f.submit %>
  <% end %>
<% end %>
