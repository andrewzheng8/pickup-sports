<div class="page-header">
  <h1>Players</h1>
  <!-- players search -->
  <%= form_tag players_path, method: 'get' do %>
    <div class="form-group">
      <%= text_field_tag :players, params[:players], placeholder: "Find players by email", class: "form-control" %>
    </div>
    <%= submit_tag 'Search', class: 'btn btn-default' %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <% if params[:players] %>
      <h2>Search Results</h2>
      <% results = @players.count %>
      <p><%= results %> <%= results == 1 ? "match" : "matches" %> found</p>
    <% else %>
      <h2>Viewing All Players</h2>
    <% end %>
    <% @players.each do |player| %>
      <div class="row">
        <div class="col-md-12">
          <%= link_to player.email, player_path(player) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
